<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">

    <servlet>
        <servlet-name>LoginController</servlet-name>
        <servlet-class>com.condreadrian.Quiz.controller.LoginController</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>CreateAccountController</servlet-name>
        <servlet-class>com.condreadrian.Quiz.controller.CreateAccountController</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>LogoutController</servlet-name>
        <servlet-class>com.condreadrian.Quiz.controller.LogoutController</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>GetQuestionsController</servlet-name>
        <servlet-class>com.condreadrian.Quiz.controller.GetQuestionsController</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>GetResultsController</servlet-name>
        <servlet-class>com.condreadrian.Quiz.controller.GetResultsController</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>LoginController</servlet-name>
        <url-pattern>/LoginController</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>CreateAccountController</servlet-name>
        <url-pattern>/CreateAccountController</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>LogoutController</servlet-name>
        <url-pattern>/LogoutController</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>GetQuestionsController</servlet-name>
        <url-pattern>/GetQuestionsController</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>GetResultsController</servlet-name>
        <url-pattern>/GetResultsController</url-pattern>
    </servlet-mapping>
</web-app>